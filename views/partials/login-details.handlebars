<section class="form-container">
    <h1>Log in to see your events.</h1>
        <div>
            <form id='login-form' class="form">
                <label for="email">Email: </label>
                <input type="text" id="email-login" name="email" class="email" required>
                <br>
                <label for="password">Password: </label>
                <input type="password" id="password-login" name="password" class="password" required>
                <br>
                <button type="submit" id="loginButton">Login</button>
            </form>
        </div>
        <br>
        <div>
            <button type="createUser" id="signUpButton" class="menu-button">Don't have an account? Click here to create one.</button>
        </div>
</section>