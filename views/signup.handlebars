{{!< main}}
<section>
    <h1>Sign Up</h1>
    <div>
        <form id="signup-form">
            <label for="firstname">First Name: </label>
            <input type="text" id="firstname-signup" name="firstname" required>
            <br>
            <label for="lastname">Last Name: </label>
            <input type="text" id="lastname-signup" name="lastname" required>
            <br>
            <label for="email">Email: </label>
            <input type="text" id="email-signup" name="email" required>
            <br> 
            <label for="password">Password: </label>
            <input type="password" id="password-signup" name="password" required>
            <br>
            <label for="timezone">Time Zone: </label>
            <button type="submit">Select Time Zone</button>
            <br>
            <button type="submit" id="signUpButton">Create Account</button>
        </form>
            <br>
        <div>
            <button id="returnToLogin">Already Have an Account? Login Here!</button>
        </div>
    </div>
</section>

<script src="/js/signup.js"></script>
